<?xml version="1.0" encoding="UTF-8"?>
<local:AthleteChallengesXaml xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="SportChallengeMatchRank.Shared.AthleteChallengesPage"
	xmlns:local="clr-namespace:SportChallengeMatchRank.Shared;assembly=SportChallengeMatchRank">
	<local:AthleteChallengesXaml.Content>
		<ListView x:Name="list" ItemsSource="{Binding Challenges}" RefreshCommand="{Binding GetChallengesCommand}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<ViewCell.View>
							<StackLayout Orientation="Horizontal">
								<StackLayout Padding="20,10,10,10" Spacing="0">
									<Label Text="{Binding ChallengerAthlete.Name}" FontSize="13" />
									<Label Text="{Binding ProposedTime}" FontSize="13" />
								</StackLayout>
								<Label Text="{Binding League.Name}" FontSize="13" />
							</StackLayout>
						</ViewCell.View>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</local:AthleteChallengesXaml.Content>

</local:AthleteChallengesXaml>