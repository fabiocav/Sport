<?xml version="1.0" encoding="UTF-8"?>
<local:ChallengeDateXaml xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="SportChallengeMatchRank.Shared.ChallengeDatePage"
	xmlns:local="clr-namespace:SportChallengeMatchRank.Shared;assembly=SportChallengeMatchRank"
	xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions">
	<local:ChallengeDateXaml.Content>
			<Grid VerticalOptions="Fill" HorizontalOptions="Fill" BackgroundColor="{StaticResource bluePrimary}">
				<Grid.RowDefinitions>
					<RowDefinition Height="7*" />
					<RowDefinition Height="3*" />
				</Grid.RowDefinitions>

				<StackLayout Padding="80" Spacing="40">
					<ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
					<local:ExtendedDatePicker x:Name="datePicker" Date="{Binding SelectedDate}" BackgroundColor="#22FFFFFF"
						HasBorder="false" Font="40" XAlign="Center" TextColor="White" />

					<local:ExtendedTimePicker x:Name="timePicker" Time="{Binding SelectedTime}" BackgroundColor="#22FFFFFF"
						HasBorder="false" Font="40" XAlign="Center" TextColor="White" />

					<Label HeightRequest="200" HorizontalOptions="Fill" Text="{Binding TimeOptions}" />
				</StackLayout>

				<StackLayout Grid.Row="1" VerticalOptions="End">
					<Button x:Name="btnChallenge" Text="Send Challenge Request"
						IsEnabled="{Binding IsBusy, Converter={x:Static local:InverseBoolConverter.Instance}}" BackgroundColor="#44000000"
						VerticalOptions="End" />
				</StackLayout>
			</Grid>
	</local:ChallengeDateXaml.Content>
</local:ChallengeDateXaml>
