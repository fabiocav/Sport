<?xml version="1.0" encoding="UTF-8"?>
<local:MembershipsByLeagueXaml xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="SportChallengeMatchRank.Shared.MembershipsByLeaguePage"
	xmlns:local="clr-namespace:SportChallengeMatchRank.Shared;assembly=SportChallengeMatchRank">
	<local:MembershipsByLeagueXaml.Content>
		<ListView x:Name="list" RowHeight="66" ItemsSource="{Binding League.Memberships}"
			IsRefreshing="{Binding IsBusy, Mode=OneWay}" RefreshCommand="{Binding GetAllMembershipsByLeagueCommand}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<ViewCell.View>
							<StackLayout Padding="40,10,20,10" Spacing="20" Orientation="Horizontal">
								<Label Text="{Binding CurrentRank}" FontSize="42" VerticalOptions="Center" />
								<StackLayout Spacing="0">
									<Label Text="{Binding Athlete.Name}" FontSize="20" VerticalOptions="Center" />
									<Label Text="{Binding Athlete.Email}" FontSize="12" HorizontalOptions="End" VerticalOptions="Center" />
								</StackLayout>
							</StackLayout>
						</ViewCell.View>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</local:MembershipsByLeagueXaml.Content>
</local:MembershipsByLeagueXaml>