<?xml version="1.0" encoding="UTF-8"?>
<local:LeagueDetailsXaml xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="SportChallengeMatchRank.Shared.LeagueDetailsPage" xmlns:local="clr-namespace:SportChallengeMatchRank.Shared;assembly=SportChallengeMatchRank">
	<local:LeagueDetailsXaml.Content>

		<Grid Padding="20">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="100" />
			</Grid.RowDefinitions>

			<StackLayout Grid.Row="0" Spacing="20" VerticalOptions="Center">
				<ActivityIndicator IsRunning="{Binding IsBusy}" />

				<Label Text="{Binding League.Name}" FontSize="50" />
				<Label Text="{Binding League.Sport}" FontSize="20" />

				<StackLayout Orientation="Horizontal" Spacing="8">
					<Label Text="Created on: " />
					<Label Text="{Binding League.DateCreated}" />
				</StackLayout>

				<StackLayout Orientation="Horizontal" Spacing="8">
					<Label Text="Created by: " />
					<Label Text="{Binding League.CreatedBy}" />
				</StackLayout>

			</StackLayout>

			<StackLayout Grid.Row="1" Spacing="10" VerticalOptions="End">
				<Button x:Name="btnMemberStatus" Text="Current Members" Style="{StaticResource buttonStyle}" />

				<Button x:Name="btnJoinLeague" Text="Join League" Style="{StaticResource buttonStyle}"
						IsEnabled="{Binding IsBusy, Converter={x:Static local:InverseBoolConverter.Instance}}" VerticalOptions="End" />
			</StackLayout>
		</Grid>

	</local:LeagueDetailsXaml.Content>
</local:LeagueDetailsXaml>